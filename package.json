{
  "name": "moyuking",
  "version": "1.0.0",
  "description": "摸鱼王 - 支持多种摸鱼方式的悬浮窗应用（抖音、小说等）",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite & electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "start:win": "start.bat",
    "preview": "vite preview"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^32.1.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.moyuking.app",
    "productName": "moyuking",
    "directories": {
      "output": "release"
    },
    "icon": "fish.png",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "overlay-preload.js",
      "config.js",
      "modules/**/*",
      "package.json",
      "node_modules/iconv-lite/**/*",
      "node_modules/safer-buffer/**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!*.md",
      "!*.bat",
      "!vite.config.js",
      "!create-release.*"
    ],
    "asar": false,
    "win": {
      "icon": "fish.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "xxss0903",
      "repo": "moyuking"
    }
  }
}
